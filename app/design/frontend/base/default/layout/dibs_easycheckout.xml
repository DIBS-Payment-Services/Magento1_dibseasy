<?xml version="1.0"?>
<layout version="0.1.0">
    <default>
        <reference name="head">
            <action method="addItem"><type>skin_css</type><name>css/dibs/easy_checkout.css</name><params/></action>
        </reference>
        <reference name="topCart.extra_actions">
            <block ifconfig="checkout/options/dibs_easy_checkout_enabled" type="dibs_easycheckout/checkout_link" name="dibs_easy.checkout.top_cart.shortcut" template="dibs/easycheckout/link.phtml"/>
        </reference>
        <reference name="cart_sidebar.extra_actions">
            <block ifconfig="checkout/options/dibs_easy_checkout_enabled" type="dibs_easycheckout/checkout_link" name="dibs_easy.checkout.cart_sidebar.shortcut" template="dibs/easycheckout/link.phtml"/>
        </reference>
    </default>

    <checkout_cart_index>
        <reference name="checkout.cart.top_methods">
            <block ifconfig="checkout/options/dibs_easy_checkout_enabled" type="dibs_easycheckout/checkout_link"
                   name="checkout.cart.top_methods.dibs_easycheckout" template="dibs/easycheckout/link.phtml"/>
        </reference>

        <reference name="checkout.cart.methods">
            <block ifconfig="checkout/options/dibs_easy_checkout_enabled" type="dibs_easycheckout/checkout_link"
                   name="checkout.cart.methods.dibs_easycheckout" template="dibs/easycheckout/link.phtml"/>
        </reference>
    </checkout_cart_index>

    <dibs_easycheckout_checkout_index>
        <label>Dibs Easy Checkout</label>
        <reference name="root">
            <action method="setTemplate"><template>page/1column.phtml</template></action>
        </reference>
        <remove name="left" />
        <remove name="right" />
        <reference name="content">
            <block type="dibs_easycheckout/checkout" name="dibs_easy_checkout" as="dibs_easy_checkout" template="dibs/easycheckout/checkout.phtml" />
        </reference>
    </dibs_easycheckout_checkout_index>
</layout>
